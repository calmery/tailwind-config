{
  "pre-commit": {
    "commands": {
      "eslint": {
        "glob": "*.{js,jsx,ts,tsx}",
        "run": "npx eslint {staged_files}"
      },
      "prettier": {
        "glob": "*.{js,json,jsx,ts,tsx,yaml}",
        "run": "npx prettier --check {staged_files}"
      }
    },
    "parallel": true
  }
}
